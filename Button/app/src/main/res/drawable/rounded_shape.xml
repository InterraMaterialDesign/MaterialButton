<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:drawable="@color/colorAccent" android:state_pressed="true"> </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="18dp"> </corners>
            <solid android:color="@color/colorSecondary"> </solid>
            <stroke android:color="@color/colorPrimary"> </stroke>
            <padding android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"> </padding>
            <gradient android:startColor="@color/colorSecondary"
                android:centerColor="@color/colorAccent"
                android:endColor="@color/colorPrimary"
                android:type="sweep"> </gradient>

        </shape>

    </item>

</selector>