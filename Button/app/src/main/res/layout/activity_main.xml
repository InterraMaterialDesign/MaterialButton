<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/constraint"
    android:columnCount="1"
    android:padding="24dp"
    android:layout_gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:text="@string/basic_button"
        android:id="@+id/basicButton"
        android:layout_margin="16dp"
        android:textSize="15sp"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:padding="8dp"
        android:textStyle="bold"
        android:clickable="true"/>

    <TextView
        android:id="@+id/fab"
        android:layout_width="match_parent"
        android:text="@string/fab"
        android:layout_margin="16dp"
        android:textSize="15sp"
        android:background="@color/green"
        android:textColor="@color/white"
        android:padding="8dp"
        android:textStyle="bold"
        android:clickable="true"/>

    <TextView
        android:id="@+id/unelevatedButton"
        android:layout_width="match_parent"
        android:text="@string/unelevated_button"
        android:layout_margin="16dp"
        android:textSize="15sp"
        android:background="@color/red"
        android:textColor="@color/white"
        android:padding="8dp"
        android:textStyle="bold"
        android:clickable="true"/>

    <TextView
        android:id="@+id/textAppearence"
        android:layout_width="match_parent"
        android:text="@string/text_appearance"
        android:layout_margin="16dp"
        android:textSize="15sp"
        android:background="@color/yellow"
        android:textColor="@color/black"
        android:padding="8dp"
        android:textStyle="bold"
        android:clickable="true"/>

    <TextView
        android:id="@+id/textButton"
        android:layout_width="match_parent"
        android:text="@string/text_button"
        android:layout_margin="16dp"
        android:textSize="15sp"
        android:background="@color/orange"
        android:textColor="@color/white"
        android:padding="8dp"
        android:textStyle="bold"
        android:clickable="true"/>



</GridLayout>